		{
			"name": "Password Reset",
			"item": [
				{
					"name": "1. Request Password Reset",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    ",
									"    if (jsonData.token) {",
									"        pm.environment.set(\"reset_token\", jsonData.token);",
									"        console.log(\"Reset token saved: \" + jsonData.token);",
									"    } else {",
									"        console.log(\"Token not returned (production mode - sent by email)\");",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-ID",
								"value": "{{tenant_id}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/password-reset/request",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"password-reset",
								"request"
							]
						},
						"description": "Request password reset. Requires X-Tenant-ID header.\n\n**In DEV mode:** Token is returned in response.\n**In production:** Token is sent by email."
					},
					"response": []
				},
				{
					"name": "2. Validate Reset Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-ID",
								"value": "{{tenant_id}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"{{reset_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/password-reset/validate",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"password-reset",
								"validate"
							]
						},
						"description": "Validate if the reset token is valid. Requires X-Tenant-ID header."
					},
					"response": []
				},
				{
					"name": "3. Confirm Password Reset",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-ID",
								"value": "{{tenant_id}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"{{reset_token}}\",\n  \"new_password\": \"NewSecurePass123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/password-reset/confirm",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"password-reset",
								"confirm"
							]
						},
						"description": "Confirm password reset with valid token. Requires X-Tenant-ID header."
					},
					"response": []
				},
				{
					"name": "4. Test - Try Reuse Token (Should Fail)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-ID",
								"value": "{{tenant_id}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"{{reset_token}}\",\n  \"new_password\": \"AnotherPassword456!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/password-reset/confirm",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"password-reset",
								"confirm"
							]
						},
						"description": "Security test: Try to reuse an already used token. Should fail."
					},
					"response": []
				}
			],
			"description": "Complete password recovery flow with tenant validation"
		},
