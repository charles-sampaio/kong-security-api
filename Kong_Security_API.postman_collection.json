	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"register"
							]
						},
						"description": "Register a new user in the system"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"jwt_token\", jsonData.token);",
									"    console.log(\"JWT token saved: \" + jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"login"
							]
						},
						"description": "Login and get a JWT token (automatically saved)"
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{jwt_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/me",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"me"
							]
						},
						"description": "Get authenticated user information (requires JWT token)"
					},
					"response": []
				}
			],
			"description": "Authentication and user management endpoints"
		},
		{
			"name": "Password Reset",
			"item": [
				{
					"name": "1. Request Password Reset",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Extract token from response (now in 'token' field)",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    ",
									"    // In DEV mode, the 'token' field exists in response",
									"    if (jsonData.token) {",
									"        pm.environment.set(\"reset_token\", jsonData.token);",
									"        console.log(\"Reset token saved: \" + jsonData.token);",
									"    } else {",
									"        console.log(\"Token not returned (production mode - sent by email)\");",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/password-reset/request",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"password-reset",
								"request"
							]
						},
						"description": "Request password reset. Generates a unique token and sends by email.\n\n**In DEV mode:** Token is returned in response and automatically saved.\n\n**In production:** Token is sent only by email."
					},
					"response": []
				},
				{
					"name": "2. Validate Reset Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"{{reset_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/password-reset/validate",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"password-reset",
								"validate"
							]
						},
						"description": "Validate if the reset token is valid, not expired and not used.\n\n**Optional:** Frontend can use this endpoint to validate before showing new password form.\n\n**Uses:** Token automatically saved from previous request."
					},
					"response": []
				},
				{
					"name": "3. Confirm Password Reset",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"{{reset_token}}\",\n  \"new_password\": \"NewSecurePass123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/password-reset/confirm",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"password-reset",
								"confirm"
							]
						},
						"description": "Confirm password reset with valid token.\n\n**Actions:**\n- Validate token\n- Update user password (bcrypt hash)\n- Mark token as used\n- Invalidate all other tokens for same email\n\n**Validations:**\n- Password must be at least 8 characters\n- Token must be valid, not expired and not used"
					},
					"response": []
				},
				{
					"name": "4. Test - Try Reuse Token (Should Fail)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"{{reset_token}}\",\n  \"new_password\": \"AnotherPassword456!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/password-reset/confirm",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"password-reset",
								"confirm"
							]
						},
						"description": "**Security test:** Try to reuse an already used token.\n\n**Expected:** Error 400 - \"Invalid or expired token\"\n\nDemonstrates that tokens are single-use only."
					},
					"response": []
				}
			],
			"description": "Complete password recovery flow with single-use tokens"
		},
